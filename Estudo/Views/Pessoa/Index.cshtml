@model IList<Estudo.Models.Pessoa>

@Html.ActionLink("Novo", "Form", "Pessoa");

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>CpfCnpj</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
            {
            <tr>
                <td>@p.Id</td>
                <td>@p.Nome</td>
                <td>@p.CpfCnpj</td>
                <td>@Html.ActionLink("Remover", "Remove", new { id = p.Id })</td>
                <td>@Html.ActionLink("Editar", "Form", new { id = p.Id })</td>
            </tr>
        }
    </tbody>
</table>




